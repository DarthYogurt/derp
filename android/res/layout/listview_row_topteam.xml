<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/pw_rounded_blue_bg"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="14dp"
	    android:paddingRight="14dp" >
	    
	    <com.walintukai.derpteam.CustomFontBoldTextView
	        android:id="@+id/first_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:textColor="#fff"
	        android:textSize="19sp" />
	    
	    <com.walintukai.derpteam.CustomFontBoldTextView
	        android:id="@+id/up_vote_count"
	        android:layout_width="24dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:textSize="19sp"
	        android:textColor="#00b200" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/up_vote_count"
	        android:layout_marginRight="30dp" >
	        
	        <ImageView 
	            android:id="@+id/random_pic_1"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginRight="6dp"
	            android:scaleType="fitXY" />
	        
	        <ImageView 
	            android:id="@+id/random_pic_2"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginRight="6dp"
	            android:scaleType="fitXY" />
	        
	        <ImageView 
	            android:id="@+id/random_pic_3"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:scaleType="fitXY" />
	        
	    </LinearLayout>
	
	</RelativeLayout>

</LinearLayout>
